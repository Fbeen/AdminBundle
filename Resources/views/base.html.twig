<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Font Awesome CSS -->
        <link rel="stylesheet" href="/css/all.min.css">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        
        <link rel="stylesheet" href="/css/admin.css">
        <link rel="stylesheet" href="{{ asset('css/switch.css') }}">
        <link rel="shortcut icon" type="image/x-icon" href="/cropped-Gibalaux-logo-zwart-1-32x32.png">
        <title>Dashboard | {% block title %}Frans Dispuut Leiden Gibalaux!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <div class="wrapper">
            <!-- Sidebar  -->
            <nav id="sidebar">
                <div style="position: fixed; width: 248px;">
                    <a class="navbar-brand pt-0 pb-0" href="{{ path('homepage') }}"><img src="/images/logo.svg" width="250" alt="php-programmer.nl"></a>
                    <div class="sidebar-header">
                        <h3><i class="fas fa-wrench mr-2"></i> Dashboard</h3>
                    </div>

                    <ul class="list-unstyled components">
                        <li>
                            <a href="{{ path('fbeen_admin_dashboard') }}"><i class="fas fa-home mr-2"></i> Dashboard</a>
                        </li>
                        {% for admin in admins %}
                            <li>
                                <a href="{{ path('fbeen_admin_index', {'slug':admin.slug}) }}"><i class="{{ admin.icon }}"></i> {{ admin.label }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                    <ul class="list-unstyled CTAs">
                        <li>
                            <a href="{{ path('homepage') }}" class="download"><i class="fas fa-home mr-1"></i> Homepage</a>
                        </li>
                        {#                <li>
                                            <a href="https://bootstrapious.com/p/bootstrap-sidebar" class="article">Back to article</a>
                                        </li>               #}
                    </ul>
                </div>
            </nav>
            <!-- Page Content  -->
            <div id="content">

                <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">


                    <a class="btn btn-default" href="#" id="sidebarCollapse" style="border-right: 1px solid lightgray; border-radius: 0">
                        <i class="fas fa-align-left"></i>
                    </a>
                    {{ breadcrumbs() }}
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            {% block admin_user_nav %}{% endblock %}
                        </ul>
                    </div>

                </nav>
                <div class="container">
                    <div id="inner-content">
                        {% block body %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        <script>
            $(document).ready(function () {
                $('#sidebarCollapse').on('click', function () {
                    $('#sidebar').toggleClass('active');
                });
            });
        </script>
        {% block modals %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>